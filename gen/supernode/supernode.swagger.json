        "methods": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "supernodeStatusResponse": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "title": "Supernode version"
        },
        "uptimeSeconds": {
          "type": "string",
          "format": "uint64",
          "title": "Uptime in seconds"
        },
        "resources": {
          "$ref": "#/definitions/StatusResponseResources"
        },
        "runningTasks": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/StatusResponseServiceTasks"
